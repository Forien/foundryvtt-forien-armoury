<div class="forien-armoury item-repair">
    {{#if armour}}
        <div class="repair-group">
            <h2>{{localize 'Forien.Armoury.ItemRepair.ArmourPlural'}}</h2>
            {{#each armour as |armor a|}}
                {{> forien-armoury.itemRepair.repairItemEntry type='armour' item=armor paid=../paid }}
            {{/each}}
        </div>
    {{/if}}
    {{#if weapons}}
        <div class="repair-group">
            <h2>{{localize 'Forien.Armoury.ItemRepair.Weapons'}}</h2>
            {{#each weapons as |weapon w|}}
                {{> forien-armoury.itemRepair.repairItemEntry type='weapon' item=weapon paid=../paid }}
            {{/each}}
        </div>
    {{/if}}
    {{#if trappings}}
        <div class="repair-group">
            <h2>{{localize 'Forien.Armoury.ItemRepair.Trappings'}}</h2>
            {{#each trappings as |trapping t|}}
                {{> forien-armoury.itemRepair.repairItemEntry type='trapping' item=trapping paid=../paid }}
            {{/each}}
        </div>
    {{/if}}
    {{#if empty}}
        {{localize 'Forien.Armoury.ItemRepair.NoItemsToRepair'}}
    {{/if}}
</div>
