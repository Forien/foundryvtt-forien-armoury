<div class="forien-armoury magical-endurance-header">
    <div class="magical-endurance-box">
        <label for="magical-endurance-value" class="label">{{localize 'Forien.Armoury.CastingFatigue.MagicalEndurance'}}:</label>
        <div class="input">
            <input id="magical-endurance-value" type="text" value="{{value}}" />
        </div>
        <span class="label divide">/</span>
        <span class="label value">{{maximum}}</span>
    </div>
    <div class="magical-endurance-box">
        <span class="label">{{localize 'Forien.Armoury.CastingFatigue.Regen'}}:</span>
        <span class="label divide value">{{regen}}</span>
        <span class="label value">{{localize 'Forien.Armoury.CastingFatigue.PerHourShort'}}</span>
    </div>
</div>