<form>
    <nav class="tabs">
        <a class="item" data-tab="main">{{localize "Forien.Armoury.Settings.Tabs.Main"}}</a>
        {{#if tabs.arrow}}
            <a class="item" data-tab="arrow-reclamation">{{localize
                    "Forien.Armoury.Settings.Tabs.ArrowReclamation"}}</a>
        {{/if}}
        {{#if tabs.combatFatigue}}
            <a class="item" data-tab="combat-fatigue">{{localize "Forien.Armoury.Settings.Tabs.CombatFatigue"}}</a>
        {{/if}}
        {{#if tabs.castingFatigue}}
            <a class="item" data-tab="casting-fatigue">{{localize "Forien.Armoury.Settings.Tabs.CastingFatigue"}}</a>
        {{/if}}
        {{#if tabs.scrolls}}
            <a class="item" data-tab="scrolls">{{localize "Forien.Armoury.Settings.Tabs.Scrolls"}}</a>
        {{/if}}
        {{#if tabs.grimoires}}
            <a class="item" data-tab="grimoires">{{localize "Forien.Armoury.Settings.Tabs.Grimoires"}}</a>
        {{/if}}
        {{#if tabs.integrations}}
            <a class="item" data-tab="integrations">{{localize "Forien.Armoury.Settings.Tabs.Integrations"}}</a>
        {{/if}}
    </nav>

    <div class="content">
        <div class="tab" data-tab="main">
            {{> forien-armoury.settings.tab settings=tabs.main promo=true}}
        </div>
        <div class="tab" data-tab="arrow-reclamation">
            {{> forien-armoury.settings.tab settings=tabs.arrow}}
        </div>
        <div class="tab" data-tab="combat-fatigue">
            {{> forien-armoury.settings.tab settings=tabs.combatFatigue}}
        </div>
        <div class="tab" data-tab="casting-fatigue">
            {{> forien-armoury.settings.tab settings=tabs.castingFatigue}}
        </div>
        <div class="tab" data-tab="scrolls">
            {{> forien-armoury.settings.tab settings=tabs.scrolls}}
        </div>
        <div class="tab" data-tab="grimoires">
            {{> forien-armoury.settings.tab settings=tabs.grimoires}}
        </div>
        <div class="tab" data-tab="integrations">
            {{> forien-armoury.settings.tab settings=tabs.integrations}}
        </div>
    </div>

    <button type="submit">Submit</button>
</form>