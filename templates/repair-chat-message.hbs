<div class="forien-armoury item-repair">
    {{#if armour}}
        <div class="repair-group">
            <h2>Armour</h2>
            {{#each armour as |armor a|}}
                {{> modules/forien-armoury/templates/partials/repair-item-entry.hbs type='armour' item=armor}}
            {{/each}}
        </div>
    {{/if}}
    {{#if weapons}}
        <div class="repair-group">
            <h2>Weapons</h2>
            {{#each weapons as |weapon w|}}
                {{> modules/forien-armoury/templates/partials/repair-item-entry.hbs type='weapon' item=weapon }}
            {{/each}}
        </div>
    {{/if}}
    {{#if trappings}}
        <div class="repair-group">
            <h2>Trappings</h2>
            {{#each trappings as |trapping t|}}
                {{> modules/forien-armoury/templates/partials/repair-item-entry.hbs type='trapping' item=trapping }}
            {{/each}}
        </div>
    {{/if}}
</div>
